<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/searchQueryText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:ems="10"
        android:hint="Enter Twitter query search here"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:weightSum="5"
        android:id="@+id/box1"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchQueryText">

    <EditText
        android:id="@+id/tagQueryText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:hint="Tag your query"
        android:layout_weight="3" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Save"
            android:textAllCaps="false"
            android:background="#F6AC3E" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/box2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#F6AC3E"
        app:layout_constraintBottom_toTopOf="@id/buttonClearTags"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="90dp"
        android:layout_above="@id/buttonClearTags">

        <TextView
            android:id="@+id/textView2"
            android:gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tagged Searches"
            android:textSize="20dp" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:layout_marginTop="50dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginRight="30dp"

            android:useDefaultMargins="true">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Android"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Google"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Iphone"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Java"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Samsung"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Kotlin"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Apple"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Microsoft"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="AndroidP"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Edit"
                android:textAllCaps="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_columnWeight="1"
                android:text="Android11"
                android:textAllCaps="false"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Edit"
                android:textAllCaps="false" />


        </GridLayout>
    </ScrollView>
    </RelativeLayout>


    <Button
        android:id="@+id/buttonClearTags"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Clear Tags"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>